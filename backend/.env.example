# OpenAI API (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for contextual chunking with Claude Haiku)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Embedding settings
EMBEDDING_PROVIDER=openai  # "openai" or "local"
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI model name
USE_RERANKER=false  # Set to true to enable reranking (requires more RAM)

# Qdrant (file-based by default, no API key needed)
QDRANT_PATH=./data/qdrant

# Optional: Qdrant Cloud (if using cloud instead of local)
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your_qdrant_api_key_here
